---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';
---

<BaseLayout 
  title="Usluge — ZIPTV TECH SOLUTIONS" 
  description="Landing stranice, business sajtovi, web aplikacije, održavanje i hosting. Sve što vam treba za digitalno prisustvo."
>
  <Navbar slot="navbar" />
  
  <!-- Compact Hero -->
  <section class="py-12 bg-gradient-to-br from-indigo-50 via-white to-emerald-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-3xl sm:text-4xl font-bold text-gray-900 mb-3 fade-in">Usluge</h1>
      <p class="text-xl text-gray-600 fade-in stagger-1">Od landing stranica do kompleksnih web aplikacija i dugoročne podrške.</p>
    </div>
  </section>
  
  <!-- Services Grid -->
  <section class="py-12">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid md:grid-cols-2 gap-6">
        
        <!-- Landing Stranice -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover-lift animate-on-scroll stagger-1">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Landing stranice</h2>
              <p class="text-indigo-600 font-semibold text-sm">START</p>
            </div>
          </div>
          
          <ul class="space-y-2 mb-4">
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Moderna, brza stranica sa fokus na konverziju</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Mobile-first responsive dizajn</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">SEO optimizacija</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Kontakt forma i Analytics</span>
            </li>
          </ul>
          
          <div class="bg-gray-50 rounded-lg p-3 mb-4">
            <p class="text-xs text-gray-600"><strong>Rok:</strong> 3–7 dana</p>
          </div>
        </div>
        
        <!-- Business Sajtovi -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover-lift animate-on-scroll stagger-2">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Business sajtovi</h2>
              <p class="text-indigo-600 font-semibold text-sm">PRO</p>
            </div>
          </div>
          
          <ul class="space-y-2 mb-4">
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Multi-page sajt sa CMS opcijom</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Blog ili news sekcija</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Napredna SEO optimizacija</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Integracije: mailing, CRM, kalendar</span>
            </li>
          </ul>
          
          <div class="bg-gray-50 rounded-lg p-3 mb-4">
            <p class="text-xs text-gray-600"><strong>Rok:</strong> 1–3 sedmice</p>
          </div>
        </div>
        
        <!-- Web Aplikacije -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover-lift animate-on-scroll stagger-3">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Web aplikacije</h2>
              <p class="text-indigo-600 font-semibold text-sm">CUSTOM</p>
            </div>
          </div>
          
          <ul class="space-y-2 mb-4">
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Custom backend i baza podataka</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">User management i autentifikacija</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Admin dashboard i statistika</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">API integracije i automatizacije</span>
            </li>
          </ul>
          
          <div class="bg-gray-50 rounded-lg p-3 mb-4">
            <p class="text-xs text-gray-600"><strong>Rok:</strong> 4–12 sedmica</p>
          </div>
        </div>
        
        <!-- Održavanje & Hosting -->
        <div class="bg-white border border-gray-200 rounded-xl p-6 shadow-sm hover-lift animate-on-scroll stagger-4">
          <div class="flex items-center gap-3 mb-4">
            <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" />
              </svg>
            </div>
            <div>
              <h2 class="text-2xl font-bold text-gray-900">Održavanje & Hosting</h2>
              <p class="text-indigo-600 font-semibold text-sm">SUPPORT</p>
            </div>
          </div>
          
          <ul class="space-y-2 mb-4">
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Pouzdano hosting i SSL</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Automatski backup svakih 24h</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Software update i security</span>
            </li>
            <li class="flex items-start text-sm">
              <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              <span class="text-gray-700">Tehnička podrška i monitoring</span>
            </li>
          </ul>
          
          <div class="bg-gray-50 rounded-lg p-3 mb-4">
            <p class="text-xs text-gray-600"><strong>Cijena:</strong> Od 20–50 KM mjesečno</p>
          </div>
        </div>
        
      </div>
    </div>
  </section>
  
  <CTA 
    title="Pošaljite ime firme — dobijate demo bez obaveze."
    description="Za 24–48h dobijate demo verziju prema vašoj djelatnosti."
    href="/contact"
  />
  
  <Footer slot="footer" />
</BaseLayout>
