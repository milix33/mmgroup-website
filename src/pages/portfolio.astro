---
import BaseLayout from '../layouts/BaseLayout.astro';
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';
import CTA from '../components/CTA.astro';
---

<BaseLayout 
  title="Portfolio — ZIPTV TECH SOLUTIONS" 
  description="Pogledajte naše projekte: web aplikacije, landing stranice i business sajtovi koje smo napravili za klijente."
>
  <Navbar slot="navbar" />
  
  <!-- Compact Hero -->
  <section class="relative py-16 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 gradient-animate overflow-hidden">
    <div class="absolute inset-0 pattern-dots opacity-20"></div>
    <div class="absolute top-10 left-10 w-64 h-64 bg-white/10 rounded-full blur-3xl float"></div>
    <div class="absolute bottom-10 right-10 w-80 h-80 bg-purple-300/20 rounded-full blur-3xl float" style="animation-delay: 2s;"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center">
        <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4 fade-in-up">Portfolio</h1>
        <p class="text-xl text-white/90 max-w-2xl mx-auto fade-in stagger-1">Projekti koji pokazuju naš rad i rezultate</p>
      </div>
    </div>
  </section>
  
  <!-- Modern Grid Portfolio -->
  <section class="py-16 relative overflow-hidden">
    <div class="absolute inset-0 pattern-grid opacity-10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <!-- Projects Grid -->
      <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
        
        <!-- Dr KOLAROV -->
        <a 
          href="https://drkolarov.vercel.app/" 
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/95 backdrop-blur-sm border-2 border-amber-200 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-amber-300 transition-all duration-300 relative hover-lift card-3d transform-3d animate-on-scroll stagger-1"
        >
          <div class="absolute top-3 right-3 z-10">
            <span class="inline-block px-2 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-semibold border border-amber-300">
              DEMO
            </span>
          </div>
          <div class="h-48 bg-gradient-to-br from-blue-50 to-indigo-50 flex items-center justify-center p-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900">Dr KOLAROV</h3>
              <p class="text-xs text-gray-500 mt-1">Stomatološka ambulanta</p>
            </div>
          </div>
          <div class="p-5">
            <span class="inline-block px-2 py-1 bg-blue-100 text-blue-600 rounded-md text-xs font-medium mb-3">Business sajt</span>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">Stomatološka ambulanta u Prnjavoru sa modernim dizajnom i sistemom za zakazivanje.</p>
            <p class="text-xs text-amber-700 mb-3">Demo verzija</p>
            <span class="text-xs text-indigo-600 font-semibold group-hover:text-indigo-700 inline-flex items-center">
              Posjetite demo →
            </span>
          </div>
        </a>
        
        <!-- Dr BASTAŠIĆ -->
        <a 
          href="https://bastasic.vercel.app/" 
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/95 backdrop-blur-sm border-2 border-amber-200 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-amber-300 transition-all duration-300 relative hover-lift card-3d transform-3d animate-on-scroll stagger-2"
        >
          <div class="absolute top-3 right-3 z-10">
            <span class="inline-block px-2 py-1 bg-amber-100 text-amber-700 rounded-full text-xs font-semibold border border-amber-300">
              DEMO
            </span>
          </div>
          <div class="h-48 bg-gradient-to-br from-emerald-50 to-teal-50 flex items-center justify-center p-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900">Dr BASTAŠIĆ</h3>
              <p class="text-xs text-gray-500 mt-1">Stomatološka ordinacija</p>
            </div>
          </div>
          <div class="p-5">
            <span class="inline-block px-2 py-1 bg-emerald-100 text-emerald-600 rounded-md text-xs font-medium mb-3">Business sajt</span>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">Stomatološka ordinacija u Banja Luci sa profesionalnim prikazom usluga i tima.</p>
            <p class="text-xs text-amber-700 mb-3">Demo verzija</p>
            <span class="text-xs text-indigo-600 font-semibold group-hover:text-indigo-700 inline-flex items-center">
              Posjetite demo →
            </span>
          </div>
        </a>
        
        <!-- RegiAlert -->
        <a 
          href="https://regalert.vercel.app/" 
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/95 backdrop-blur-sm border border-gray-200 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-indigo-300 transition-all duration-300 hover-lift card-3d transform-3d animate-on-scroll stagger-3"
        >
          <div class="h-48 bg-gray-50 flex items-center justify-center p-6">
            <img 
              src="/regialert-logo.svg" 
              alt="RegiAlert" 
              class="max-w-full h-auto max-h-24 object-contain group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <div class="p-5">
            <span class="inline-block px-2 py-1 bg-blue-100 text-blue-600 rounded-md text-xs font-medium mb-3">Web aplikacija</span>
            <h3 class="text-lg font-bold text-gray-900 mb-2">RegiAlert</h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">Automatska SMS obavještenja za isteke registracije i zakazane termine.</p>
            <span class="text-xs text-indigo-600 font-semibold group-hover:text-indigo-700 inline-flex items-center">
              Posjetite sajt →
            </span>
          </div>
        </a>
        
        <!-- SRT Transport -->
        <a 
          href="https://srtpedja.vercel.app/" 
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/95 backdrop-blur-sm border border-gray-200 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-emerald-300 transition-all duration-300 hover-lift card-3d transform-3d animate-on-scroll stagger-4"
        >
          <div class="h-48 bg-gray-50 flex items-center justify-center p-6">
            <img 
              src="/srt-transport-logo.svg" 
              alt="SRT Transport" 
              class="max-w-full h-auto max-h-24 object-contain group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <div class="p-5">
            <span class="inline-block px-2 py-1 bg-emerald-100 text-emerald-600 rounded-md text-xs font-medium mb-3">Business sajt</span>
            <h3 class="text-lg font-bold text-gray-900 mb-2">SRT Transport</h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">Pouzdan prevoz robe i vozila u BiH i Evropi sa modernim business sajtom.</p>
            <span class="text-xs text-indigo-600 font-semibold group-hover:text-indigo-700 inline-flex items-center">
              Posjetite sajt →
            </span>
          </div>
        </a>
        
        <!-- AIFleetControl -->
        <a 
          href="/contact" 
          class="group bg-white/95 backdrop-blur-sm border border-gray-200 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-indigo-300 transition-all duration-300 hover-lift card-3d transform-3d animate-on-scroll stagger-5"
        >
          <div class="h-48 bg-gradient-to-br from-slate-50 to-blue-50 flex items-center justify-center p-6">
            <div class="text-center">
              <div class="w-16 h-16 bg-gradient-to-br from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center mx-auto mb-3 group-hover:scale-110 transition-transform">
                <svg class="w-8 h-8 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path d="M9 17a2 2 0 11-4 0 2 2 0 014 0zM19 17a2 2 0 11-4 0 2 2 0 014 0z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16V6a1 1 0 00-1-1H4a1 1 0 00-1 1v10a1 1 0 001 1h1m8-1a1 1 0 01-1 1H9m4-1V8a1 1 0 011-1h2.586a1 1 0 01.707.293l3.414 3.414a1 1 0 01.293.707V16a1 1 0 01-1 1h-1m-6-1a1 1 0 001 1h1M5 17a2 2 0 104 0m-4 0a2 2 0 114 0m6 0a2 2 0 104 0m-4 0a2 2 0 114 0" />
                </svg>
              </div>
              <h3 class="text-lg font-bold text-gray-900">AIFleetControl</h3>
              <p class="text-xs text-gray-500 mt-1">Fleet Management</p>
            </div>
          </div>
          <div class="p-5">
            <span class="inline-block px-2 py-1 bg-indigo-100 text-indigo-600 rounded-md text-xs font-medium mb-3">Web aplikacija</span>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">Kompleksan fleet management sistem sa real-time tracking i automatizacijom.</p>
            <span class="text-xs text-indigo-600 font-semibold group-hover:text-indigo-700 inline-flex items-center">
              Demo na upit →
            </span>
          </div>
        </a>
        
        <!-- ZipTV Box -->
        <a 
          href="https://ziptvbox.com/" 
          target="_blank"
          rel="noopener noreferrer"
          class="group bg-white/95 backdrop-blur-sm border border-gray-200 rounded-xl overflow-hidden shadow-lg hover:shadow-2xl hover:border-purple-300 transition-all duration-300 hover-lift card-3d transform-3d animate-on-scroll stagger-6"
        >
          <div class="h-48 bg-gray-50 flex items-center justify-center p-6">
            <img 
              src="/ziptvbox-logo.png" 
              alt="ZipTV Box" 
              class="max-w-full h-auto max-h-24 object-contain group-hover:scale-110 transition-transform duration-300"
            />
          </div>
          <div class="p-5">
            <span class="inline-block px-2 py-1 bg-purple-100 text-purple-600 rounded-md text-xs font-medium mb-3">Web platforma</span>
            <h3 class="text-lg font-bold text-gray-900 mb-2">ZipTV Box</h3>
            <p class="text-sm text-gray-600 mb-3 line-clamp-2">Kompletna IPTV media player platforma za streaming TV kanala i VOD sadržaja.</p>
            <span class="text-xs text-indigo-600 font-semibold group-hover:text-indigo-700 inline-flex items-center">
              Posjetite sajt →
            </span>
          </div>
        </a>
        
      </div>
    </div>
  </section>
  
  <!-- Compact Process Section -->
  <section class="py-16 bg-gradient-to-br from-gray-50 via-indigo-50 to-purple-50 relative overflow-hidden">
    <div class="absolute inset-0 pattern-grid opacity-15"></div>
    <div class="absolute top-10 left-10 w-64 h-64 bg-indigo-200/30 rounded-full blur-3xl float"></div>
    <div class="absolute bottom-10 right-10 w-80 h-80 bg-purple-200/30 rounded-full blur-3xl float" style="animation-delay: 2s;"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <h2 class="text-3xl font-bold text-gray-900 mb-10 text-center animate-on-scroll">Kako radimo</h2>
      
      <div class="grid md:grid-cols-4 gap-6">
        <div class="bg-white/90 backdrop-blur-sm border border-gray-200 rounded-xl p-6 text-center hover-lift card-3d transform-3d animate-on-scroll stagger-1 shadow-lg">
          <div class="w-16 h-16 bg-gradient-to-br from-indigo-600 to-purple-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow">
            1
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">Discovery</h3>
          <p class="text-xs text-gray-600">Analiza potreba i ciljeva</p>
        </div>
        
        <div class="bg-white/90 backdrop-blur-sm border border-gray-200 rounded-xl p-6 text-center hover-lift card-3d transform-3d animate-on-scroll stagger-2 shadow-lg">
          <div class="w-16 h-16 bg-gradient-to-br from-emerald-600 to-teal-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow" style="animation-delay: 0.3s;">
            2
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">Demo</h3>
          <p class="text-xs text-gray-600">Demo za 24–48h</p>
        </div>
        
        <div class="bg-white/90 backdrop-blur-sm border border-gray-200 rounded-xl p-6 text-center hover-lift card-3d transform-3d animate-on-scroll stagger-3 shadow-lg">
          <div class="w-16 h-16 bg-gradient-to-br from-blue-600 to-cyan-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow" style="animation-delay: 0.6s;">
            3
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">Iteracija</h3>
          <p class="text-xs text-gray-600">Prilagođavanje i feedback</p>
        </div>
        
        <div class="bg-white/90 backdrop-blur-sm border border-gray-200 rounded-xl p-6 text-center hover-lift card-3d transform-3d animate-on-scroll stagger-4 shadow-lg">
          <div class="w-16 h-16 bg-gradient-to-br from-pink-600 to-rose-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow" style="animation-delay: 0.9s;">
            4
          </div>
          <h3 class="text-base font-semibold text-gray-900 mb-2">Launch</h3>
          <p class="text-xs text-gray-600">Postavljanje i podrška</p>
        </div>
      </div>
    </div>
  </section>
  
  <CTA 
    title="Zatraži prezentaciju"
    description="Želite da vidimo šta možemo uraditi za vas? Pošaljite upit i dobijate demo za 24–48h."
    href="/contact"
  />
  
  <Footer slot="footer" />
</BaseLayout>
