---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import CTA from '../../components/CTA.astro';
import { translations } from '../../i18n/translations';

export function getStaticPaths() {
  return [
    { params: { lang: 'sr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params as { lang: 'sr' | 'de' | 'en' };
const t = translations[lang];
const p = t.pricing;
const base = `/${lang}`;
---

<BaseLayout
  title={`${p.title} — ZIPTV TECH SOLUTIONS`}
  description={p.subtitle}
  lang={lang}
>
  <Navbar slot="navbar" lang={lang} currentPath="pricing" />
  
  <section class="relative py-16 bg-gradient-to-br from-indigo-600 via-purple-600 to-pink-600 gradient-animate overflow-hidden">
    <div class="absolute inset-0 pattern-dots opacity-20"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
      <h1 class="text-4xl sm:text-5xl font-bold text-white mb-4 fade-in-up">{p.title}</h1>
      <p class="text-xl text-white/90 fade-in stagger-1">{p.subtitle}</p>
    </div>
  </section>
  
  <section class="py-16 relative overflow-hidden -mt-8 bg-slate-50">
    <div class="absolute inset-0 pattern-grid opacity-10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="grid md:grid-cols-3 gap-6">
        <!-- START -->
        <div class="bg-white/95 backdrop-blur-sm border border-slate-200 rounded-xl p-6 shadow-xl hover-lift card-3d transform-3d animate-on-scroll stagger-1 hover-glow">
          <h3 class="text-2xl font-bold text-slate-900 mb-2">START</h3>
          <p class="text-4xl font-bold text-slate-900 mb-4">od {p.priceStart}</p>
          <p class="text-slate-600 mb-6 text-sm">{p.startDesc}</p>
          <ul class="space-y-2 mb-6">
            {p.startFeatures.map((f) => (
              <li class="flex items-start text-sm">
                <Check />
                <span class="text-slate-700">{f}</span>
              </li>
            ))}
          </ul>
          <a href={`${base}/contact`} class="block w-full text-center bg-slate-900 text-white px-6 py-3 rounded-lg hover:bg-slate-800 transition-all duration-300 font-semibold hover-lift">
            {p.requestQuote}
          </a>
        </div>
        
        <!-- PRO -->
        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 text-white border-2 border-indigo-600 rounded-xl p-6 shadow-2xl relative hover-lift card-3d transform-3d animate-on-scroll stagger-2 scale-105 hover:scale-110 glow">
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-emerald-500 text-white px-4 py-1 rounded-full text-sm font-semibold shadow-xl pulse">
            {p.popular}
          </div>
          <h3 class="text-2xl font-bold mb-2">PRO</h3>
          <p class="text-4xl font-bold mb-4">od {p.pricePro}</p>
          <p class="text-indigo-100 mb-6 text-sm">{p.proDesc}</p>
          <ul class="space-y-2 mb-6">
            {p.proFeatures.map((f) => (
              <li class="flex items-start text-sm">
                <svg class="w-5 h-5 text-emerald-300 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span class="text-white">{f}</span>
              </li>
            ))}
          </ul>
          <a href={`${base}/contact`} class="block w-full text-center bg-white text-indigo-600 px-6 py-3 rounded-lg hover:bg-indigo-50 transition-all duration-300 font-semibold hover-lift">
            {p.requestQuote}
          </a>
        </div>
        
        <!-- CUSTOM -->
        <div class="bg-white/95 backdrop-blur-sm border border-slate-200 rounded-xl p-6 shadow-xl hover-lift card-3d transform-3d animate-on-scroll stagger-3 hover-glow">
          <h3 class="text-2xl font-bold text-slate-900 mb-2">CUSTOM</h3>
          <p class="text-4xl font-bold text-slate-900 mb-4">{p.priceCustom}</p>
          <p class="text-slate-600 mb-6 text-sm">{p.customDesc}</p>
          <ul class="space-y-2 mb-6">
            {p.customFeatures.map((f) => (
              <li class="flex items-start text-sm">
                <svg class="w-5 h-5 text-emerald-500 mr-2 flex-shrink-0 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg>
                <span class="text-slate-700">{f}</span>
              </li>
            ))}
          </ul>
          <a href={`${base}/contact`} class="block w-full text-center bg-slate-900 text-white px-6 py-3 rounded-lg hover:bg-slate-800 transition-all duration-300 font-semibold hover-lift">
            {p.contactUs}
          </a>
        </div>
      </div>
      
      <div class="mt-10 bg-gradient-to-br from-indigo-50 via-purple-50 to-pink-50 border-2 border-indigo-200 rounded-xl p-8 text-center animate-on-scroll shadow-xl relative overflow-hidden">
        <div class="relative z-10">
          <h3 class="text-2xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">
            {lang === 'sr' ? 'Hosting i održavanje' : lang === 'de' ? 'Hosting & Wartung' : 'Hosting & maintenance'}
          </h3>
          <p class="text-2xl font-bold text-slate-900 mb-3"><strong>{p.hosting}</strong></p>
          <p class="text-slate-600 text-sm max-w-2xl mx-auto">{p.hostingDesc}</p>
        </div>
      </div>
      
      <div class="mt-8 text-center animate-on-scroll">
        <p class="text-sm text-slate-600 max-w-2xl mx-auto"><strong>{p.note}</strong></p>
      </div>
    </div>
  </section>
  
  <section class="py-16 bg-gradient-to-br from-slate-50 via-indigo-50 to-purple-50 relative overflow-hidden">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-10 text-center animate-on-scroll">{p.paymentTitle}</h2>
      <div class="grid md:grid-cols-2 gap-6">
        <div class="bg-white/90 backdrop-blur-sm border border-slate-200 rounded-xl p-6 hover-lift shadow-lg">
          <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center mb-4 pulse">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" /></svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-3">{p.payment1Title}</h3>
          <p class="text-slate-600 mb-3 text-sm">{p.payment1Desc}</p>
          <p class="text-xs text-slate-500">{p.payment1Note}</p>
        </div>
        <div class="bg-white/90 backdrop-blur-sm border border-slate-200 rounded-xl p-6 hover-lift shadow-lg">
          <div class="w-12 h-12 bg-gradient-to-br from-emerald-500 to-teal-600 rounded-lg flex items-center justify-center mb-4 pulse">
            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" /></svg>
          </div>
          <h3 class="text-lg font-semibold text-slate-900 mb-3">{p.payment2Title}</h3>
          <p class="text-slate-600 mb-3 text-sm">{p.payment2Desc}</p>
          <p class="text-xs text-slate-500">{p.payment2Note}</p>
        </div>
      </div>
      <div class="mt-8 bg-gradient-to-r from-indigo-50 to-purple-50 border-2 border-indigo-200 rounded-xl p-6 text-center shadow-lg">
        <p class="text-slate-700 text-sm font-semibold">{p.currencyNote}</p>
      </div>
    </div>
  </section>
  
  <CTA title={p.ctaTitle} description={p.ctaDesc} href={`${base}/contact`} buttonText={p.requestQuote} />
  
  <Footer slot="footer" lang={lang} />
</BaseLayout>
