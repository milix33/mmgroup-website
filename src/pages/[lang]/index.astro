---
import BaseLayout from '../../layouts/BaseLayout.astro';
import Navbar from '../../components/Navbar.astro';
import Footer from '../../components/Footer.astro';
import Hero from '../../components/Hero.astro';
import Card from '../../components/Card.astro';
import CTA from '../../components/CTA.astro';
import { translations } from '../../i18n/translations';

export function getStaticPaths() {
  return [
    { params: { lang: 'sr' } },
    { params: { lang: 'de' } },
    { params: { lang: 'en' } },
  ];
}

const { lang } = Astro.params as { lang: 'sr' | 'de' | 'en' };
const t = translations[lang];
const home = t.home;
const pricing = t.pricing;
const base = `/${lang}`;
---

<BaseLayout
  title={`ZIPTV TECH SOLUTIONS | ${home.servicesTitle}`}
  description={home.subtitle}
  lang={lang}
>
  <Navbar slot="navbar" lang={lang} currentPath="" />
  
  <Hero
    title={home.title}
    subtitle={home.subtitle}
    primaryCta={{ text: home.primaryCta, href: `${base}/contact` }}
    secondaryCta={{ text: home.secondaryCta, href: `${base}/portfolio` }}
  />
  
  <section class="py-8 bg-gradient-to-r from-indigo-600 via-purple-600 to-pink-600 gradient-animate">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-6 text-center">
        <div class="fade-in stagger-1">
          <div class="glass rounded-xl p-4 backdrop-blur-md">
            <p class="text-white font-bold text-lg mb-1">24–48h</p>
            <p class="text-white/90 text-sm">{home.stats.demo}</p>
          </div>
        </div>
        <div class="fade-in stagger-2">
          <div class="glass rounded-xl p-4 backdrop-blur-md">
            <p class="text-white font-bold text-lg mb-1">Mobile</p>
            <p class="text-white/90 text-sm">{home.stats.mobile}</p>
          </div>
        </div>
        <div class="fade-in stagger-3">
          <div class="glass rounded-xl p-4 backdrop-blur-md">
            <p class="text-white font-bold text-lg mb-1">SEO</p>
            <p class="text-white/90 text-sm">{home.stats.seo}</p>
          </div>
        </div>
        <div class="fade-in stagger-4">
          <div class="glass rounded-xl p-4 backdrop-blur-md">
            <p class="text-white font-bold text-lg mb-1">{home.stats.support}</p>
          </div>
        </div>
      </div>
    </div>
  </section>
  
  <section class="py-16 relative overflow-hidden bg-white rounded-3xl mx-4 sm:mx-6 lg:mx-8 shadow-xl border border-slate-200/80 -mt-4">
    <div class="absolute top-20 left-0 w-72 h-72 bg-indigo-200/20 rounded-full blur-3xl -ml-36 -mt-36 float"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">{home.servicesTitle}</h2>
        <p class="text-xl text-slate-600">{home.servicesSubtitle}</p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="animate-on-scroll stagger-1 hover-lift">
          <Card title={home.cardLanding} description={home.cardLandingDesc} icon="M13 10V3L4 14h7v7l9-11h-7z" href={`${base}/services`} />
        </div>
        <div class="animate-on-scroll stagger-2 hover-lift">
          <Card title={home.cardBusiness} description={home.cardBusinessDesc} icon="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" href={`${base}/services`} />
        </div>
        <div class="animate-on-scroll stagger-3 hover-lift">
          <Card title={home.cardWebapp} description={home.cardWebappDesc} icon="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z" href={`${base}/services`} />
        </div>
        <div class="animate-on-scroll stagger-4 hover-lift">
          <Card title={home.cardHosting} description={home.cardHostingDesc} icon="M5 12h14M5 12a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v4a2 2 0 01-2 2M5 12a2 2 0 00-2 2v4a2 2 0 002 2h14a2 2 0 002-2v-4a2 2 0 00-2-2m-2-4h.01M17 16h.01" href={`${base}/services`} />
        </div>
      </div>
      <div class="text-center mt-10 animate-on-scroll">
        <a href={`${base}/services`} class="inline-flex items-center text-indigo-600 hover:text-indigo-700 font-semibold group">
          {home.allServices}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
      </div>
    </div>
  </section>
  
  <section class="py-16 bg-slate-800 relative overflow-hidden">
    <div class="absolute inset-0 pattern-grid opacity-10"></div>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-3xl sm:text-4xl font-bold text-white mb-4">{home.processTitle}</h2>
        <p class="text-xl text-slate-300">{home.processSubtitle}</p>
      </div>
      <div class="grid md:grid-cols-2 lg:grid-cols-4 gap-6">
        <div class="text-center animate-on-scroll stagger-1 hover-lift card-3d transform-3d bg-slate-700/50 backdrop-blur rounded-xl p-6 border border-slate-600 shadow-lg">
          <div class="w-20 h-20 bg-gradient-to-br from-indigo-600 to-purple-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow">1</div>
          <h3 class="text-lg font-semibold text-white mb-2">{home.step1}</h3>
          <p class="text-slate-300 text-sm">{home.step1Desc}</p>
        </div>
        <div class="text-center animate-on-scroll stagger-2 hover-lift card-3d transform-3d bg-slate-700/50 backdrop-blur rounded-xl p-6 border border-slate-600 shadow-lg">
          <div class="w-20 h-20 bg-gradient-to-br from-emerald-600 to-teal-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow">2</div>
          <h3 class="text-lg font-semibold text-white mb-2">{home.step2}</h3>
          <p class="text-slate-300 text-sm">{home.step2Desc}</p>
        </div>
        <div class="text-center animate-on-scroll stagger-3 hover-lift card-3d transform-3d bg-slate-700/50 backdrop-blur rounded-xl p-6 border border-slate-600 shadow-lg">
          <div class="w-20 h-20 bg-gradient-to-br from-blue-600 to-cyan-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow">3</div>
          <h3 class="text-lg font-semibold text-white mb-2">{home.step3}</h3>
          <p class="text-slate-300 text-sm">{home.step3Desc}</p>
        </div>
        <div class="text-center animate-on-scroll stagger-4 hover-lift card-3d transform-3d bg-slate-700/50 backdrop-blur rounded-xl p-6 border border-slate-600 shadow-lg">
          <div class="w-20 h-20 bg-gradient-to-br from-pink-600 to-rose-600 text-white rounded-full flex items-center justify-center mx-auto mb-4 text-2xl font-bold shadow-xl pulse glow">4</div>
          <h3 class="text-lg font-semibold text-white mb-2">{home.step4}</h3>
          <p class="text-slate-300 text-sm">{home.step4Desc}</p>
        </div>
      </div>
    </div>
  </section>
  
  <section class="py-16 relative overflow-hidden bg-amber-50/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">{home.featuredTitle}</h2>
        <p class="text-xl text-slate-600">{home.featuredSubtitle}</p>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <a href="https://www.drpetkovic.com/sr" target="_blank" rel="noopener noreferrer" class="block bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group animate-on-scroll stagger-1 hover-lift">
          <div class="h-48 bg-slate-50 flex items-center justify-center p-6"><img src="https://www.drpetkovic.com/images/logopng2.png" alt="Dr Petković" class="max-w-full h-auto max-h-32 object-contain" /></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-slate-900 mb-2">Stomatološka ordinacija Dr Petković</h3>
            <p class="text-slate-600 text-sm mb-2">Stomatologija, usluge, online zakazivanje.</p>
            <span class="text-sm text-indigo-600 font-semibold">Business sajt →</span>
          </div>
        </a>
        <a href="https://m2milan.vercel.app/" target="_blank" rel="noopener noreferrer" class="block bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group animate-on-scroll stagger-2 hover-lift">
          <div class="h-48 bg-slate-50 flex items-center justify-center p-6"><img src="https://m2milan.vercel.app/images/logo/logopng.png" alt="M² Architecture" class="max-w-full h-auto max-h-32 object-contain" /></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-slate-900 mb-2">M² Architecture</h3>
            <p class="text-slate-600 text-sm mb-2">Projektovanje, nadzor, portfolio.</p>
            <span class="text-sm text-indigo-600 font-semibold">Business sajt →</span>
          </div>
        </a>
        <a href="https://regalert.vercel.app/" target="_blank" rel="noopener noreferrer" class="block bg-white border border-slate-200 rounded-xl overflow-hidden shadow-sm hover:shadow-xl transition-all duration-300 group animate-on-scroll stagger-3 hover-lift">
          <div class="h-48 bg-slate-50 flex items-center justify-center p-6"><img src="/regialert-logo.svg" alt="RegiAlert" class="max-w-full h-auto max-h-32 object-contain" /></div>
          <div class="p-6">
            <h3 class="text-xl font-semibold text-slate-900 mb-2">RegiAlert</h3>
            <p class="text-slate-600 text-sm mb-4">SMS obavještenja za isteke registracije.</p>
            <span class="text-sm text-indigo-600 font-semibold">Web aplikacija →</span>
          </div>
        </a>
      </div>
      <div class="text-center mt-10 animate-on-scroll">
        <a href={`${base}/portfolio`} class="inline-flex items-center text-indigo-600 hover:text-indigo-700 font-semibold group">
          {home.viewAll}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
      </div>
    </div>
  </section>
  
  <section class="py-16 bg-white rounded-3xl mx-4 sm:mx-6 lg:mx-8 shadow-xl border border-slate-200/80 relative overflow-hidden">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">{home.pricingTitle}</h2>
        <p class="text-xl text-slate-600">{home.pricingSubtitle}</p>
      </div>
      <div class="grid md:grid-cols-3 gap-6">
        <div class="bg-white/95 backdrop-blur-sm border border-slate-200 rounded-xl p-6 shadow-xl hover-lift animate-on-scroll stagger-1">
          <h3 class="text-xl font-semibold text-slate-900 mb-2">START</h3>
          <p class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">{pricing.priceStart}</p>
          <p class="text-slate-600 mb-6 text-sm">{pricing.startDesc}</p>
          <a href={`${base}/pricing`} class="block text-center text-indigo-600 hover:text-indigo-700 font-semibold group">{home.detailMore} →</a>
        </div>
        <div class="bg-gradient-to-br from-indigo-600 to-purple-600 text-white border-2 border-indigo-600 rounded-xl p-6 shadow-2xl relative hover-lift animate-on-scroll stagger-2 scale-105">
          <div class="absolute -top-4 left-1/2 transform -translate-x-1/2 bg-emerald-500 text-white px-4 py-1 rounded-full text-sm font-semibold shadow-xl pulse">{pricing.popular}</div>
          <h3 class="text-xl font-semibold mb-2">PRO</h3>
          <p class="text-3xl font-bold mb-4">{pricing.pricePro}</p>
          <p class="text-indigo-100 mb-6 text-sm">{pricing.proDesc}</p>
          <a href={`${base}/pricing`} class="block text-center text-white hover:text-indigo-100 font-semibold">{home.detailMore} →</a>
        </div>
        <div class="bg-white/95 backdrop-blur-sm border border-slate-200 rounded-xl p-6 shadow-xl hover-lift animate-on-scroll stagger-3">
          <h3 class="text-xl font-semibold text-slate-900 mb-2">CUSTOM</h3>
          <p class="text-3xl font-bold bg-gradient-to-r from-indigo-600 to-purple-600 bg-clip-text text-transparent mb-4">{pricing.priceCustom}</p>
          <p class="text-slate-600 mb-6 text-sm">{pricing.customDesc}</p>
          <a href={`${base}/pricing`} class="block text-center text-indigo-600 hover:text-indigo-700 font-semibold group">{home.detailMore} →</a>
        </div>
      </div>
      <p class="text-center text-slate-600 mt-8 text-sm animate-on-scroll">{home.hostingNote}</p>
    </div>
  </section>
  
  <section class="py-16 relative overflow-hidden bg-slate-100">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 relative z-10">
      <div class="text-center mb-12 animate-on-scroll">
        <h2 class="text-3xl sm:text-4xl font-bold text-slate-900 mb-4">{home.faqTitle}</h2>
      </div>
      <div class="space-y-4">
        <div class="bg-white/90 backdrop-blur-sm border border-slate-200 rounded-xl p-6 hover-lift animate-on-scroll stagger-1 shadow-lg">
          <h3 class="text-lg font-semibold text-slate-900 mb-2">{home.faq1q}</h3>
          <p class="text-slate-600 text-sm">{home.faq1a}</p>
        </div>
        <div class="bg-white/90 backdrop-blur-sm border border-slate-200 rounded-xl p-6 hover-lift animate-on-scroll stagger-2 shadow-lg">
          <h3 class="text-lg font-semibold text-slate-900 mb-2">{home.faq2q}</h3>
          <p class="text-slate-600 text-sm">{home.faq2a}</p>
        </div>
        <div class="bg-white/90 backdrop-blur-sm border border-slate-200 rounded-xl p-6 hover-lift animate-on-scroll stagger-3 shadow-lg">
          <h3 class="text-lg font-semibold text-slate-900 mb-2">{home.faq3q}</h3>
          <p class="text-slate-600 text-sm">{home.faq3a}</p>
        </div>
      </div>
      <div class="text-center mt-10 animate-on-scroll">
        <a href={`${base}/contact`} class="inline-flex items-center text-indigo-600 hover:text-indigo-700 font-semibold group">
          {home.viewAllFaq}
          <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" /></svg>
        </a>
      </div>
    </div>
  </section>
  
  <CTA title={home.ctaTitle} description={home.ctaDesc} href={`${base}/contact`} buttonText={home.ctaButton} />
  
  <Footer slot="footer" lang={lang} />
</BaseLayout>
