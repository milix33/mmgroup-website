---
interface Props {
  title: string;
  subtitle: string;
  primaryCta?: { text: string; href: string };
  secondaryCta?: { text: string; href: string };
  gradient?: boolean;
}

const { title, subtitle, primaryCta, secondaryCta, gradient = true } = Astro.props;
---

<section class={`py-20 relative overflow-hidden ${gradient ? 'bg-gradient-to-br from-indigo-50 via-white to-emerald-50' : 'bg-white'}`}>
  <!-- Floating Logo Background (Watermark Effect) -->
  <div class="absolute inset-0 flex items-center justify-center pointer-events-none opacity-5">
    <img 
      src="/logo.png" 
      alt="MMGroup" 
      class="w-96 h-96 object-contain hero-logo-watermark"
    />
  </div>
  
  <!-- Floating Logo (Top Right) -->
  <div class="absolute top-8 right-8 hidden lg:block">
    <div class="hero-logo-float">
      <div class="relative group">
        <div class="absolute inset-0 bg-indigo-600 rounded-2xl blur-xl opacity-30 group-hover:opacity-50 transition-opacity duration-300"></div>
        <div class="relative bg-white/90 backdrop-blur-sm rounded-2xl p-4 shadow-xl border border-gray-200 group-hover:shadow-2xl transition-all duration-300 group-hover:scale-110">
          <img 
            src="/logo.png" 
            alt="MMGroup" 
            class="w-20 h-20 object-contain"
          />
        </div>
      </div>
    </div>
  </div>
  
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
    <!-- Logo Above Title (Mobile & Desktop) -->
    <div class="mb-8 flex justify-center">
      <div class="hero-logo-fade-in">
        <div class="relative group">
          <div class="absolute inset-0 bg-gradient-to-r from-indigo-600 to-emerald-500 rounded-3xl blur-2xl opacity-40 group-hover:opacity-60 transition-opacity duration-500 animate-pulse"></div>
          <div class="relative bg-white rounded-3xl p-6 shadow-2xl border-2 border-gray-100 group-hover:border-indigo-300 transition-all duration-500 group-hover:scale-105 group-hover:rotate-1">
            <img 
              src="/logo.png" 
              alt="MMGroup" 
              class="w-24 h-24 sm:w-32 sm:h-32 object-contain"
            />
          </div>
        </div>
      </div>
    </div>
    
    <h1 class="text-4xl sm:text-5xl lg:text-6xl font-bold text-gray-900 mb-6 leading-tight">
      {title}
    </h1>
    <p class="text-xl text-gray-600 mb-10 max-w-3xl mx-auto">
      {subtitle}
    </p>
    <div class="flex flex-col sm:flex-row gap-4 justify-center">
      {primaryCta && (
        <a 
          href={primaryCta.href}
          class="inline-flex items-center justify-center px-8 py-4 bg-indigo-600 text-white rounded-lg hover:bg-indigo-700 transition-colors font-semibold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
        >
          {primaryCta.text}
        </a>
      )}
      {secondaryCta && (
        <a 
          href={secondaryCta.href}
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-indigo-600 border-2 border-indigo-600 rounded-lg hover:bg-indigo-50 transition-colors font-semibold text-lg shadow-lg hover:shadow-xl transform hover:-translate-y-1 transition-all duration-300"
        >
          {secondaryCta.text}
        </a>
      )}
    </div>
  </div>
  
  <style>
    /* Floating Animation */
    @keyframes float {
      0%, 100% {
        transform: translateY(0px) rotate(0deg);
      }
      50% {
        transform: translateY(-20px) rotate(2deg);
      }
    }
    
    @keyframes fadeInUp {
      from {
        opacity: 0;
        transform: translateY(30px);
      }
      to {
        opacity: 1;
        transform: translateY(0);
      }
    }
    
    @keyframes pulse {
      0%, 100% {
        opacity: 0.4;
      }
      50% {
        opacity: 0.6;
      }
    }
    
    .hero-logo-float {
      animation: float 6s ease-in-out infinite;
    }
    
    .hero-logo-fade-in {
      animation: fadeInUp 1s ease-out;
    }
    
    .hero-logo-watermark {
      animation: pulse 8s ease-in-out infinite;
    }
    
    /* Hover Glow Effect */
    .hero-logo-float:hover {
      animation-play-state: paused;
    }
  </style>
</section>
