---
interface Props {
  title: string;
  description: string;
  href?: string;
  icon?: string;
}

const { title, description, href, icon } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag 
  href={href}
  class={`block p-6 bg-white border border-gray-200 rounded-2xl shadow-sm ${href ? 'hover:shadow-md hover:border-indigo-300' : ''} transition-all`}
>
  {icon && (
    <div class="w-12 h-12 bg-indigo-100 rounded-lg flex items-center justify-center mb-4">
      <svg class="w-6 h-6 text-indigo-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
      </svg>
    </div>
  )}
  <h3 class="text-xl font-semibold text-gray-900 mb-3">{title}</h3>
  <p class="text-gray-600">{description}</p>
</Tag>
