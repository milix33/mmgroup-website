---
interface Props {
  title: string;
  description: string;
  href?: string;
  icon?: string;
}

const { title, description, href, icon } = Astro.props;
const Tag = href ? 'a' : 'div';
---

<Tag 
  href={href}
  class={`block p-6 bg-white border border-gray-200 rounded-xl shadow-sm hover:shadow-lg hover:border-indigo-300 transition-all duration-300 hover-lift group`}
>
  {icon && (
    <div class="w-12 h-12 bg-gradient-to-br from-indigo-500 to-purple-600 rounded-lg flex items-center justify-center mb-4 group-hover:scale-110 group-hover:rotate-3 transition-all duration-300">
      <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={icon} />
      </svg>
    </div>
  )}
  <h3 class="text-xl font-semibold text-gray-900 mb-3 group-hover:text-indigo-600 transition-colors">{title}</h3>
  <p class="text-gray-600 text-sm">{description}</p>
</Tag>
