---
interface Props {
  title: string;
  subtitle?: string;
  as?: 'h1' | 'h2';
  light?: boolean; // true = white text (gradient/dark bg)
  class?: string;
}

const { title, subtitle, as = 'h2', light = false, class: className = '' } = Astro.props;
const HeadingTag = as;
---
<div class={`relative overflow-hidden py-8 sm:py-10 text-center ${className}`}>
  <!-- Logo kao pozadina ispod teksta -->
  <div 
    class="absolute inset-0 flex items-center justify-center pointer-events-none z-0"
    aria-hidden="true"
  >
    <img 
      src="/logo.png" 
      alt="" 
      class="w-[min(90%,500px)] h-auto max-h-[200px] object-contain"
      style={light ? 'opacity: 0.06; filter: brightness(0) invert(1);' : 'opacity: 0.08;'}
    />
  </div>
  <div class="relative z-10">
    <HeadingTag class={light 
      ? 'text-3xl sm:text-4xl lg:text-5xl font-bold text-white mb-4' 
      : 'text-3xl sm:text-4xl font-bold text-slate-900 mb-4'
    }>
      {title}
    </HeadingTag>
    {subtitle && (
      <p class={light 
        ? 'text-xl text-white/90 max-w-3xl mx-auto' 
        : 'text-xl text-slate-600 max-w-3xl mx-auto'
      }>
        {subtitle}
      </p>
    )}
  </div>
</div>
