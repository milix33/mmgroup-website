---
import { translations } from '../i18n/translations';

interface Props {
  lang?: 'sr' | 'de' | 'en';
}

const { lang = 'sr' } = Astro.props;
const currentYear = new Date().getFullYear();
const t = translations[lang].footer;
const base = lang ? `/${lang}` : '';
const companyLinks = [
  { path: 'services', label: translations[lang].nav.services },
  { path: 'portfolio', label: translations[lang].nav.portfolio },
  { path: 'pricing', label: translations[lang].nav.pricing },
  { path: 'about', label: translations[lang].nav.about },
  { path: 'contact', label: translations[lang].nav.contact },
];
const legalLinks = [
  { href: '/privacy', label: lang === 'sr' ? 'Politika privatnosti' : lang === 'de' ? 'Datenschutz' : 'Privacy policy' },
  { href: '/terms', label: lang === 'sr' ? 'Uslovi korišćenja' : lang === 'de' ? 'Nutzungsbedingungen' : 'Terms of use' },
];
---

<footer class="bg-slate-900 text-slate-300 border-t border-slate-700 mt-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div class="animate-on-scroll">
        <h3 class="text-lg font-bold text-white mb-3">ZIPTV TECH SOLUTIONS</h3>
        <p class="text-slate-400 text-sm leading-relaxed mb-2">
          Mileta Milinčić s.p.
        </p>
        <p class="text-slate-400 text-sm leading-relaxed">
          {t.tagline}
        </p>
      </div>
      
      <div class="animate-on-scroll stagger-1">
        <h3 class="font-semibold text-white mb-4">{t.company}</h3>
        <ul class="space-y-2">
          {companyLinks.map((link) => (
            <li>
              <a href={`${base}/${link.path}`} class="text-slate-400 hover:text-indigo-400 transition-all duration-300 text-sm inline-block hover:translate-x-1">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div class="animate-on-scroll stagger-2">
        <h3 class="font-semibold text-white mb-4">{t.legal}</h3>
        <ul class="space-y-2">
          {legalLinks.map((link) => (
            <li>
              <a href={link.href} class="text-slate-400 hover:text-indigo-400 transition-all duration-300 text-sm inline-block hover:translate-x-1">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="border-t border-slate-700 mt-8 pt-8 animate-on-scroll">
      <div class="text-center mb-3">
        <p class="text-slate-400 text-sm">
          © {currentYear} ZIPTV TECH SOLUTIONS — Mileta Milinčić s.p.
        </p>
      </div>
      <div class="text-center text-slate-500 text-xs space-y-1">
        <p>{t.address}</p>
        <p>JIB: 4513996090002</p>
        <p class="mt-2">{t.copyright}</p>
      </div>
    </div>
  </div>
</footer>
