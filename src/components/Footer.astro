---
const currentYear = new Date().getFullYear();

const footerLinks = {
  company: [
    { href: '/services', label: 'Usluge' },
    { href: '/work', label: 'Radovi' },
    { href: '/about', label: 'O nama' },
    { href: '/pricing', label: 'Paketi' },
    { href: '/contact', label: 'Kontakt' },
  ],
  legal: [
    { href: '/privacy', label: 'Privacy Policy' },
    { href: '/terms', label: 'Terms of Service' },
  ],
};
---

<footer class="bg-gray-50 border-t border-gray-200 mt-24">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      <div>
        <img src="/logo.png" alt="MMGroup" class="h-10 mb-4" />
        <p class="text-gray-600 text-sm">
          MMGroup — moderan IT studio iz BiH koji radi i remote za EU. Fokus na brzinu, kvalitet i poslovni rezultat.
        </p>
      </div>
      
      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Firma</h3>
        <ul class="space-y-2">
          {footerLinks.company.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-indigo-600 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
      
      <div>
        <h3 class="font-semibold text-gray-900 mb-4">Legal</h3>
        <ul class="space-y-2">
          {footerLinks.legal.map(link => (
            <li>
              <a href={link.href} class="text-gray-600 hover:text-indigo-600 transition-colors text-sm">
                {link.label}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
    
    <div class="border-t border-gray-200 mt-8 pt-8 text-center">
      <p class="text-gray-600 text-sm">
        © {currentYear} MMGroup. BiH / EU Remote.
      </p>
    </div>
  </div>
</footer>
