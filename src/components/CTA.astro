---
interface Props {
  title: string;
  subtitle?: string;
  description: string;
  href?: string;
}

const { title, subtitle, description, href } = Astro.props;
---

<section class="py-16 bg-indigo-600 text-white">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    {subtitle && (
      <p class="text-indigo-200 font-semibold mb-2 uppercase tracking-wide text-sm">
        {subtitle}
      </p>
    )}
    <h2 class="text-3xl sm:text-4xl font-bold mb-6">
      {title}
    </h2>
    <p class="text-xl text-indigo-100 mb-8">
      {description}
    </p>
    {href && (
      <a 
        href={href}
        class="inline-flex items-center justify-center px-8 py-4 bg-white text-indigo-600 rounded-lg hover:bg-indigo-50 transition-colors font-semibold text-lg"
      >
        Kontaktiraj nas
      </a>
    )}
  </div>
</section>
